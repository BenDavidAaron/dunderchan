<div class="post-list">
    {% for post in posts %}
    <div class="card mb-4">
        <div class="card-header">
            {{ post.id }} - {{ post.author_hash }} : {{ post.title }}
        </div>
        <div class="card-content">
            {{ post.content }}
        </div>
    </div>
    {% endfor %}
</div>